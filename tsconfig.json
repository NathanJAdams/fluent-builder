{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "moduleResolution": "bundler",
    "module": "esnext",
    "removeComments": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2020",
  },
  "exclude": [
    "dist"
  ],
  "include": [
    "src"
  ],
}