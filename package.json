{
  "name": "ts-fluent-builder",
  "description": "A TypeScript library for building types - 100% fluent, arbitrarily nested, zero/de minimis config with compile-time type & data safety mechanisms.",
  "version": "1.1.0",
  "author": {
    "name": "Nathan Adams",
    "url": "https://github.com/NathanJAdams"
  },
  "license": "MIT",
  "homepage": "https://github.com/NathanJAdams/fluent-builder",
  "repository": {
    "type": "git",
    "url": "https://github.com/NathanJAdams/fluent-builder.git"
  },
  "keywords": [
    "typescript",
    "fluent builder",
    "fluent api",
    "type builder",
    "builder pattern",
    "nested builder",
    "typescript library"
  ],
  "files": [
    "dist/",
    "LICENSE",
    "README.md"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "clean": "rimraf ./dist/",
    "lint": "eslint ./src --fix",
    "test": "vitest --run --coverage",
    "test:coverage": "vitest --run --coverage"
  },
  "devDependencies": {
    "@types/node": "^22",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "eslint-plugin-import": "^2.32.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "packageManager": "yarn@4.9.2"
}